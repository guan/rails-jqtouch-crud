<% title "Contact", false %>

<div id="<%= @contact.id %>">
<div class="toolbar">
  <h1>Contact</h1>
  <%= link_to "Home", contacts_path, :class => "button" %>
</div>
<ul class="edgetoedge">
	<li class="sep">Name</li>
	<li><%=h @contact.name %></li>
	<li class="sep">Email</li>
